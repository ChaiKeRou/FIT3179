{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "config": {
        "view": {"stroke": null}
    },
    "width": 1050,
    "height": 400,
    "data": {
        "url": "https://raw.githubusercontent.com/ChaiKeRou/3179/main/data/deaths_2000_2022.csv"
    },
    
    "layer": [
    {
        "mark": {
            "type": "line",
            "point": true
        },
        "selection": {
        "CauseSelection": {
          "type": "multi",
          "fields": ["Causes of death"],
          "bind": "legend"
            }
        },
        "encoding": {
            "x": {
                "field": "Year",
                "type": "ordinal",
                "axis": {
                    "labelAngle": 0
                }
            },
            "y": {
                "field": "Deaths",
                "type": "quantitative",
                "title": "Deaths"
            },
            "order": {
                "field": "Year",
                "type": "quantitative"
            },
            "color": {
                "field": "Causes of death",
                "type": "nominal",
                "scale": {
                    "range": [
                        "#1f77b4",
                        "#ff7f0e",
                        "#2ca02c",
                        "#d62728",
                        "#9467bd",
                        "#8c564b",
                        "#e377c2",
                        "#7f7f7f",
                        "#bcbd22",
                        "#17becf",
                        "#aec7e8",
                        "#ffbb78",
                        "#98df8a",
                        "#ff9896",
                        "#c5b0d5",
                        "#c49c94",
                        "#f7b6d2",
                        "#c7c7c7",
                        "#dbdb8d",
                        "#9edae5"
                    ]
                },
                "legend": {
                    "title": "Causes of death",
                    "orient": "right"
                }
            },
            "opacity": {
                "condition": {
                    "selection": "CauseSelection",
                    "value": 1
                },
                "value": 0.2
            },
            "tooltip": [
                {
                    "field": "Causes of death",
                    "title": "Causes of death",
                    "type": "nominal"
                },
                {
                    "field": "Category",
                    "title": "Category",
                    "type": "nominal"
                },
                {
                    "field": "Year",
                    "title": "Year",
                    "type": "quantitative"
                },
                {
                    "field": "Deaths",
                    "title": "Deaths",
                    "type": "quantitative",
                    "format": ","
                }
            ]
        }
    },
    {
        "mark": {
          "type": "text",
          "fontStyle": "normal",
          "font": "Arial",
          "align": "center",
          "baseline": "middle",
          "dx": 300,
          "dy": -150,
          "fontSize": 14,
          "color": "black",
          "lineBreak": "\n"
        },
        "encoding": {
          "text": {
            "value": "COVID-19 death cases higher\namong individuals aged 65\nand above in 2021."
          }
        }
      }
    ]
}
